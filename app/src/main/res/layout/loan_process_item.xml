<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="3dp"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey_light"
                android:gravity="center_vertical">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/default_little_margin"
                    android:layout_weight="1"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvlb_mx"
                        style="@style/textStyleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="APPLICATION ID" />

                    <TextView
                        android:id="@+id/tv_mx"
                        style="@style/textStyleHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/default_little_margin"
                    android:layout_marginRight="@dimen/default_little_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvlb_roi"
                        style="@style/textStyleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="APPLICATION ID" />

                    <TextView
                        android:id="@+id/tv_roi"
                        style="@style/textStyleHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_bank"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/default_little_margin"

                    android:background="@drawable/hdfc"
                    android:padding="@dimen/default_little_margin">

                </ImageView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lay_year"
                android:padding="@dimen/default_little_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_little_margin"
                    android:layout_weight="1"

                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvlb_2year"
                        style="@style/textStyleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="APPLICATION ID" />

                    <TextView
                        android:id="@+id/tv_2year"
                        style="@style/textStyleHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567" />
                </LinearLayout>


                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/default_little_margin"
                    android:layout_marginRight="@dimen/default_little_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvlb_5year"
                        style="@style/textStyleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="APPLICATION ID" />

                    <TextView
                        android:id="@+id/tv_5year"
                        style="@style/textStyleHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/default_little_margin"
                    android:layout_marginRight="@dimen/default_little_margin"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvlb_3year"
                        style="@style/textStyleHint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="APPLICATION ID" />

                    <TextView
                        android:id="@+id/tv_3year"
                        style="@style/textStyleHeading2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1234567" />
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_seek_detail"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/lay_seekbar1"
                    android:padding="@dimen/default_little_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvlb_amount"
                        style="@style/textStyleHeading2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loan Amount" />

                    <TextView
                        android:id="@+id/tv_amount"
                        style="@style/textStyleHeading2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="₹ 1234567" />

                    <SeekBar
                        android:id="@+id/seek_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_below="@+id/tvlb_amount"
                        android:layout_marginTop="@dimen/default_little_margin"
                        android:max="100"></SeekBar>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay_seekbar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_little_margin"
                    android:layout_below="@+id/lay_seekbar1">

                    <TextView
                        android:id="@+id/tvlb_tenure"
                        style="@style/textStyleHeading2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tenure" />


                    <RadioGroup
                        android:id="@+id/radioSex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvlb_tenure"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rb_1year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/default_little_margin"
                            android:checked="true"
                            android:text="1Year" />

                        <RadioButton
                            android:id="@+id/rb_2year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginRight="@dimen/default_little_margin"
                            android:text="2 Year" />

                        <RadioButton
                            android:id="@+id/rb_3year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="3 Year" />

                    </RadioGroup>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay_rb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/default_little_margin"
                    android:layout_below="@+id/lay_seekbar2">

                    <LinearLayout
                        android:id="@+id/lay_emi"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_label01"

                            style="@style/textStyleHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="EMI"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/tv01"
                            style="@style/textStyleHint"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_emi"
                        style="@style/textStyleHeading2Oragne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/default_little_margin"
                        android:layout_toRightOf="@+id/lay_emi"
                        android:paddingLeft="@dimen/default_little_margin"
                        android:text="₹ 1234567"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_subject"
                        style="@style/textStyleHint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lay_emi"
                        android:layout_marginTop="@dimen/default_little_margin"

                        android:text="Loan regarding subject...." />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lay_approve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lay_rb"
                    android:background="@color/orange"
                    android:gravity="center_vertical"
                    android:paddingTop="@dimen/default_little_margin"

                    android:paddingLeft="@dimen/default_little_padding">

                    <TextView

                        style="@style/textStyleHeading2Oragne"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="CHECK  APPROVAL "

                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/lay_check_emi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/grey_light"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/default_little_padding">

                <TextView

                    style="@style/textStyleHeading2Oragne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="➜  CHECK  EMI "
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>